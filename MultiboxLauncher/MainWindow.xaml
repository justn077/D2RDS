<Window x:Class="MultiboxLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="D2RDS" Height="560" Width="820" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource AppBackground}" FontFamily="Georgia">
    <Window.Resources>
        <Color x:Key="ColorBackground">#0B0A0A</Color>
        <Color x:Key="ColorPanel">#141010</Color>
        <Color x:Key="ColorPanelAlt">#251515</Color>
        <Color x:Key="ColorBorder">#5A1F1F</Color>
        <Color x:Key="ColorAccent">#C01818</Color>
        <Color x:Key="ColorAccentSoft">#7F2020</Color>
        <Color x:Key="ColorText">#E9DDC6</Color>
        <Color x:Key="ColorMuted">#B4A28A</Color>

        <SolidColorBrush x:Key="AppBackground" Color="{StaticResource ColorBackground}"/>
        <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource ColorPanel}"/>
        <SolidColorBrush x:Key="PanelAltBrush" Color="{StaticResource ColorPanelAlt}"/>
        <SolidColorBrush x:Key="BorderBrushDark" Color="{StaticResource ColorBorder}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource ColorAccent}"/>
        <SolidColorBrush x:Key="AccentSoftBrush" Color="{StaticResource ColorAccentSoft}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource ColorText}"/>
        <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource ColorMuted}"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PanelAltBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushDark}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentSoftBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource PanelAltBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushDark}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Height" Value="28"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource PanelAltBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushDark}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="28"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <DockPanel Margin="14">
        <Border DockPanel.Dock="Top" Background="{StaticResource PanelBrush}" CornerRadius="6" Padding="12" Margin="0,0,0,10" BorderBrush="{StaticResource BorderBrushDark}" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="D2R Demon Slayers" FontSize="22" FontWeight="SemiBold" />
                <TextBlock Text="Multibox Launcher" Foreground="{StaticResource MutedBrush}" Margin="0,2,0,0"/>
            </StackPanel>
        </Border>

        <Border DockPanel.Dock="Top" Background="{StaticResource PanelBrush}" CornerRadius="6" Padding="12" Margin="0,0,0,10" BorderBrush="{StaticResource BorderBrushDark}" BorderThickness="1">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Button Name="BtnAddAccount" Width="110">Add Account</Button>
                    <Button Name="BtnReload" Width="90">Reload</Button>
                    <Button Name="BtnEdit" Width="120">Edit config</Button>
                    <Button Name="BtnUpdate" Width="120">Update D2RDS</Button>
                    <CheckBox Name="ChkLockOrder" Margin="0,0,12,0"
                              ToolTip="Prevents reordering accounts with Up/Down.">Lock order</CheckBox>
                    <TextBlock Name="TxtStatus" VerticalAlignment="Center" Foreground="{StaticResource MutedBrush}"/>
                </StackPanel>

                <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center">Region</TextBlock>
                    <ComboBox Grid.Row="0" Grid.Column="1" Name="CmbRegion" Width="220" Margin="0,0,0,6"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,0" VerticalAlignment="Center">Install path</TextBlock>
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                        <TextBox Name="TxtInstallPath" Width="360"/>
                        <Button Name="BtnBrowseInstall" Width="70" Margin="8,0,0,0">Browse</Button>
                    </StackPanel>

                    <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,6" VerticalAlignment="Center">Broadcast</TextBlock>
                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,6">
                        <CheckBox Name="ChkBroadcastEnabled" VerticalAlignment="Center" Margin="0,0,10,0"
                                  ToolTip="Master on/off for broadcasting input.">Enabled</CheckBox>
                        <CheckBox Name="ChkBroadcastAll" VerticalAlignment="Center" Margin="0,0,10,0"
                                  ToolTip="If checked, broadcast to all running D2R windows. If unchecked, use per-account Bcast toggles.">All</CheckBox>
                        <CheckBox Name="ChkBroadcastKeyboard" VerticalAlignment="Center" Margin="0,0,10,0"
                                  ToolTip="Broadcast keyboard input when enabled.">Keyboard</CheckBox>
                        <CheckBox Name="ChkBroadcastMouse" VerticalAlignment="Center"
                                  ToolTip="Broadcast mouse input when enabled.">Mouse</CheckBox>
                    </StackPanel>

                    <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,8,0" VerticalAlignment="Center">Broadcast hotkeys</TextBlock>
                    <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                        <TextBox Name="TxtBroadcastHotkey" Width="140" Margin="0,0,8,0"
                                 ToolTip="Global hotkey to toggle broadcasting on/off (default: Ctrl+Alt+B)."/>
                        <TextBox Name="TxtBroadcastModeHotkey" Width="140"
                                 ToolTip="Global hotkey to toggle All vs Selected mode (default: Ctrl+Alt+M)."/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <Border Background="{StaticResource PanelBrush}" CornerRadius="6" Padding="10" BorderBrush="{StaticResource BorderBrushDark}" BorderThickness="1">
            <DockPanel>
                <Grid DockPanel.Dock="Top" Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="55"/>
                        <ColumnDefinition Width="55"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Launch" Foreground="{StaticResource MutedBrush}"/>
                    <TextBlock Grid.Column="1" Text="Account" Foreground="{StaticResource MutedBrush}"/>
                    <TextBlock Grid.Column="2" Text="Bcast" Foreground="{StaticResource MutedBrush}"/>
                    <TextBlock Grid.Column="3" Text="Edit" Foreground="{StaticResource MutedBrush}"/>
                    <TextBlock Grid.Column="4" Text="Delete" Foreground="{StaticResource MutedBrush}"/>
                    <TextBlock Grid.Column="5" Text="Up" Foreground="{StaticResource MutedBrush}"/>
                    <TextBlock Grid.Column="6" Text="Down" Foreground="{StaticResource MutedBrush}"/>
                </Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Name="ProfilesPanel" />
                </ScrollViewer>
            </DockPanel>
        </Border>
    </DockPanel>
</Window>


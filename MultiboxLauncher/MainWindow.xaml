<Window x:Class="MultiboxLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="D2RDS" Height="320" Width="440" WindowStartupLocation="CenterScreen">
    <DockPanel Margin="12">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Name="BtnReload" Width="90" Margin="0,0,8,0">Reload</Button>
            <Button Name="BtnEdit" Width="120" Margin="0,0,8,0">Edit config</Button>
            <TextBlock Name="TxtStatus" VerticalAlignment="Center" />
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Name="ProfilesPanel" />
        </ScrollViewer>
    </DockPanel>
</Window>


<Window x:Class="MultiboxLauncher.AddAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Account" Height="310" Width="380" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center">Email</TextBlock>
        <TextBox Grid.Row="0" Grid.Column="1" Name="TxtEmail" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center">Password</TextBlock>
        <Grid Grid.Row="1" Grid.Column="1" Margin="0,0,0,6">
            <PasswordBox Name="TxtPassword" />
            <TextBox Name="TxtPasswordVisible" Visibility="Collapsed"/>
        </Grid>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center">Nickname</TextBlock>
        <TextBox Grid.Row="2" Grid.Column="1" Name="TxtNickname" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
            <CheckBox Name="ChkChangePassword" Margin="0,0,12,0"
                      ToolTip="When editing an account, enable this to update the saved password.">Change password</CheckBox>
            <CheckBox Name="ChkShowPassword">Show</CheckBox>
        </StackPanel>

        <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Foreground="Gray" FontSize="12">
            Nickname is optional. If blank, the button will show the email.
        </TextBlock>

        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Name="BtnCancel" Width="80" Margin="0,0,8,0">Cancel</Button>
            <Button Name="BtnOk" Width="80">Add</Button>
        </StackPanel>
    </Grid>
</Window>

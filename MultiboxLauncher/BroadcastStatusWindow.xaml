<Window x:Class="MultiboxLauncher.BroadcastStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="220"
        Height="34"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        ShowActivated="False">
    <Border Background="#CC000000" CornerRadius="6" Padding="8,6">
        <TextBlock Name="TxtStatus" Foreground="White" FontSize="12" />
    </Border>
</Window>
